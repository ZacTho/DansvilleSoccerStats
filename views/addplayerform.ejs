<% include header.ejs %>
<body>
<div class="container h-100" style="background-color: gray;">
<div class="row">
	<div class="col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 align-self-center">
		<div class="card bg-primary" style="margin-top: 25px;">
		  	<div class="card-body">
		    <h2 class="card-title">Add Player</h2>
		    	<p class="card-text">
		    		<form action="addplayer" method="post">

							<div class="input-group">
								<h4>First Name: </h4><br />
								<input type="text" class="form-control" name="fname" required/>
							</div>
							<div class="input-group">
								<h4>Last Name: </h4><br />
								<input type="text" class="form-control" name="lname" required/>
							</div>
							<div class="input-group">
								<h4>Date of Birth: </h4><br />
								<input type="date" class="form-control" name="dob" required />
							</div>
							<div class="input-group">
								<h4>Position: </h4><br />
								<input type="text" class="form-control" name="pos" required/>
							</div>
							<div class="input-group">
								<h4>Goals: </h4><br />
								<input type="number" class="form-control" name="goals" min="0" max="200" value="0" />
							</div>
							<div class="input-group">
								<h4>Assists: </h4><br />
								<input type="number" class="form-control" name="assists" min="0" max="200" value="0" />
							</div>
							<div class="input-group">
								<h4>Saves: </h4><br />
								<input type="number" class="form-control" name="saves" min="0" max="200" value="0" />
							</div>
								<br />
							<div>
								<input type="submit" class="btn btn-light text-dark" value="Add Player" />
							</div>
							<br />
					</form>

					<a href="/" class="text-light"> <h5> Return to Home</h5></a>
				</p>
			</div>
		</div>
	</div>
</div>
</div>
</body>
</html>
