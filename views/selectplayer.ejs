<% include header2.ejs %>

<body>
<div class="container h-100" style="background-color: gray;">
<div class="row">
	<div class="col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 align-self-center">
		<div class="card bg-primary" style="margin-top: 25px;">
		  <div class="card-body">
		    <h2 class="card-title">Choose a player to view their information </h2>
			    <p class="card-text">
					<form method="post" action="viewplayer">
					<div class="form-input">
						<select class="custom-select" name="player">
							<% results.forEach(function(r) { %>
								<option value="<%= r.playerid %>">
						        	<%= r.fname %> <%= r.lname %>
						    	</option>
					    	<% }); %>
						</select>
					</div>
					<br />
						<input type="submit" class="btn btn-light text-dark" value="Submit" />
					</form>
					<a href="/" class="text-light"><h4>Return to Home</h4></a>
				</p>
			</div>
		</div>
	</div>
</div>
</div>
</body>
</html>
